include ../mixins/sub-menu.pug

header.header
  .top-banner Miễn phí vận chuyển với đơn hàng trên 500K
  header#mainHeader.main-header
    .header-container
      .logo
        img(src=settingGeneral.logo, alt="Logo")

      form.search-box(action="/search", method="GET")
        input(type="text", name="keyword", placeholder="Tìm kiếm sản phẩm..." value=keyword)
        button(type="submit")
          i.bx.bx-search


      .header-right
        .account
          i.bx.bx-user
          .account-text
            if user
              .dropdown
                a.dropdown-toggle(href="#") 
                  | Tài khoản của tôi 
                  i.bx.bx-chevron-down

                .dropdown-menu
                  a(href="/user/profile") Thông tin tài khoản
                  a(href="/user/logout") Đăng xuất
            else
              a(href="/user/login") Đăng nhập / Đăng ký

        .cart
          a(href="/cart")
            i.bx.bx-shopping-bag
            span Giỏ hàng
            span.cart-count #{miniCart ? miniCart.totalQuantityInCart : 0}


    nav.main-menu
      ul
        li
          a(href="/") Trang chủ
        li.sub-menu
          -const pathProduct = '/product'
          a(href='/product') 
            span  Sản phẩm
            i.bx.bx-chevron-down
          ul.dropdown
              +sub-menu(categories, pathProduct)
        li
          a(href='/service') 
            | Dịch vụ 
            i.bx.bx-chevron-down
        li
          a(href="#") 
            | Blog 
            i.bx.bx-chevron-down
        li
          a(href="#") Giới thiệu



  
  
            
              
