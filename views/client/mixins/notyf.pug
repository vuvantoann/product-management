//- mixin notyf.pug
mixin notyfSuccess(message)
  if message
    script.
      const notyf = new Notyf({ duration: 5000, position: { x: 'right', y: 'top' } });
      notyf.success(!{JSON.stringify(message)});


mixin notyfError(message)
  if message
    script.
      const notyf = new Notyf({ duration: 3000, position: { x: 'right', y: 'top' } });
      notyf.error(!{JSON.stringify(message)});