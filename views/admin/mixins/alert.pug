  - if (messages.error)
      #alertBox
        .alert-container.error(data-time=time)
          i(class="bx bxs-error-circle alert-icon")
          .alert-content
            .alert-title Lỗi!
            .alert-message #{messages.error}
          .close
            i(class="bx bx-x alert-close")
          span 